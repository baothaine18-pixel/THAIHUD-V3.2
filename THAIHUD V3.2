-- ========= Script List UI =========
local ScrollFrame = Instance.new("ScrollingFrame")
ScrollFrame.Size = UDim2.new(1,-20,1,-60)
ScrollFrame.Position = UDim2.new(0,10,0,50)
ScrollFrame.CanvasSize = UDim2.new(0,0,0,#ScriptStore*40)
ScrollFrame.ScrollBarThickness = 6
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.Parent = Window

for i, s in ipairs(ScriptStore) do
    local Btn = Instance.new("TextButton")
    Btn.Size = UDim2.new(1,-10,0,36)
    Btn.Position = UDim2.new(0,5,0,(i-1)*40)
    Btn.BackgroundColor3 = Color3.fromRGB(120,0,150)
    Btn.TextColor3 = Color3.fromRGB(255,255,255)
    Btn.Font = Enum.Font.GothamBold
    Btn.TextSize = 16
    Btn.Text = s.name
    Btn.Parent = ScrollFrame

    Btn.MouseButton1Click:Connect(function()
        -- Xác nhận trước khi chạy
        local confirmed = true
        if confirmed then
            local ok, code = pcall(function()
                return game:HttpGet(s.link)
            end)
            if ok and code and code ~= "" then
                local fn, err = loadstring(code)
                if fn then
                    pcall(fn)
                else
                    warn("Loadstring error: "..tostring(err))
                end
            else
                warn("Failed to fetch: "..s.name)
            end
        end
    end)
end
